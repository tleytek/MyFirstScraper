<div class="container bg-light">
    <div class="row" style="background-color:#323232">
        <h1 class="text-center text-white mx-auto mb-5">Scrapping Massively OP</h1>
        <img src="https://massivelyop.com/wp-content/uploads/2018/09/logo554x180grey-small.png" alt="Massively Overpowered"
            title="MassivelyOP.com">
    </div>
    <div id="articles">
        {{#each articles}}
        <div class="row my-4">
            <div class="col-3">
                <img class="rounded thumbnail" src="{{image}}" alt=" article image">
            </div>
            <div class="col-9">
                <a href="{{link}}" target="_blank">
                    <h3 class="mx-auto text-center">{{title}}</h3>
                </a>
                <p class="mb-0"> {{text}}</p>
                <a href="/articles/{{_id}}" type="button" class="btn btn-primary float-right" id="commentButton">Comment</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>